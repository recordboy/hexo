/* ---------------------------------
 *             Customize
 * --------------------------------- */
#bg-main
    display: none
    position: relative
    background: linear-gradient( to top, #08194a, #000 )
    opacity: 0
    
    .tit
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        padding-top: 120px
        text-align: center
        font-size: 20px
        font-weight: normal
        line-height: 25px
        letter-spacing: 1px
        color: #fff
        
        .ico
            position: absolute
            top: 0
            left: 50%
            transform: translateX(-50%)
            height: 100px
            font-size: 100px
            line-height: 100px

    .dimmed
        display: none
        position: absolute
        top: 0
        left: 0
        z-index: 20
        width: 100%
        height: 100%
        background-color: #000
        opacity 0
            
    .particles-js-canvas-el
        position: fixed
