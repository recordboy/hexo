#hero
    display: none
    position: relative
    overflow: hidden
    height: 200px
    background: linear-gradient(180deg, #1a1a1a, #1a1a1a)

    .dimmed
        display: none
        position: absolute
        top: 0
        left: 0
        z-index: 20
        width: 100%
        height: 100%
        background-color: #000
        opacity 0
        
    &:before, &:after
        content: ""
        position: absolute
        width: 100%
        height: 200%
        background-image: url(/img/git.png)
        background-position: center
        background-size: auto 400px
        -webkit-animation: heroBgMove 15s linear infinite
        animation: heroBgMove 15s linear infinite
    
    &:before
        top: 200%

@-webkit-keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)

@keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)
