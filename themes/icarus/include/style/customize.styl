#bg-main
    display: none
    position: relative
    background: url('/img/starbucks.jpg') no-repeat center top / cover
    opacity: 0
    
    .tit
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        font-size: 20px
        font-weight: normal
        letter-spacing: 1px
        color: #fff

    .dimmed
        display: none
        position: absolute
        top: 0
        left: 0
        z-index: 20
        width: 100%
        height: 100%
        background-color: #000
        opacity 0
