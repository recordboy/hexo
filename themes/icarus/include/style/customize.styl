.navbar
    &.on
        .navbar-menu
            background: transparent
        .navbar-item
            color: #fff

    .bg
        display: none
        overflow hidden
        position absolute
        top: 0
        left: 0
        z-index: -10
        width: 100%
        height: 100%
        transition: 2s

        &:before, &:after
            content: ""
            position: absolute
            width: 100%
            height: 200%
            background-image: url(/img/git.png)
            background-position: center
            background-size: auto 240px
            -webkit-animation: heroBgMove 10s linear infinite
            animation: heroBgMove 10s linear infinite
        
        &:before
            top: 200%

        &.type01
            background: #17224d
        &.type02
            background: #15574e
        &.type03
            background: #42135b
        &.type04
            background: #491331

@-webkit-keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)

@keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)
        