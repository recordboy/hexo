#bg-main
    display: none
    position: relative
    background: linear-gradient( to top, #08194a, #000 )
    opacity: 0
    
    .tit
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        padding-top: 100px
        text-align: center
        font-size: 20px
        font-weight: normal
        line-height: 25px
        letter-spacing: 1px
        color: #fff
        
        .ico
            position: absolute
            top: 0
            left: 50%
            margin-left: -50px
            border-radius: 50%
            width: 100px
            height: 100px
            font-size: 50px
            line-height: 100px
            
    .particles-js-canvas-el
        position: fixed
