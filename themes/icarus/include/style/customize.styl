#hero
    display: none
    position: relative
    overflow: hidden
    
    .tit
        position: absolute
        top: 50%
        left: 50%
        z-index: 10
        transform: translate(-50%, -50%)
        text-align: center
        font-size: 20px
        font-weight: bold
        letter-spacing: 1px
        color: #fff

    .dimmed
        display: none
        position: absolute
        top: 0
        left: 0
        z-index: 20
        width: 100%
        height: 100%
        background-color: #000
        opacity 0

    .bg
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: url('/img/color.jpg') no-repeat center / cover fixed
        