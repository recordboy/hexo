/* ---------------------------------
 *             Customize
 * --------------------------------- */
#hero
    display: none
    position: relative
    overflow: hidden
    height: 250px
    
    .tit
        position: absolute
        top: 50%
        left: 50%
        z-index: 10
        transform: translate(-50%, -50%)
        text-align: center
        font-size: 20px
        font-weight: bold
        letter-spacing: 2px
        color: #fff

    .dimmed
        display: none
        position: absolute
        top: 0
        left: 0
        z-index: 20
        width: 100%
        height: 100%
        background-color: #000
        opacity 0

    .bg
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: linear-gradient(-45deg, #00bfa5, #2eb7e3) fixed
        
        &:before, &:after
            content: ""
            position: absolute
            width: 100%
            height: 200%
            background-image: url(/img/git.png)
            background-position: center
            background-size: auto 250px
            -webkit-animation: heroBgMove 30s linear infinite
            animation: heroBgMove 30s linear infinite
        
        &:before
            top: 200%

@-webkit-keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)

@keyframes heroBgMove 
    0% 
        -webkit-transform: translateY(0)
        transform: translateY(0)
    to 
        -webkit-transform: translateY(-100%)
        transform: translateY(-100%)
